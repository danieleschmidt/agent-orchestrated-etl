# =============================================================================
# Agent-Orchestrated-ETL Environment Configuration
# =============================================================================
# Copy this file to .env and configure the values for your environment

# =============================================================================
# Core Application Settings
# =============================================================================
APP_NAME=agent-orchestrated-etl
APP_VERSION=0.0.1
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL Database Settings
DATABASE_URL=postgresql://postgres:password@localhost:5432/agent_etl
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=agent_etl
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Database Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# Redis Configuration (for caching and queuing)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# Airflow Configuration
# =============================================================================
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__DAGS_FOLDER=/opt/airflow/dags
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql://postgres:password@localhost:5432/airflow
AIRFLOW__WEBSERVER__SECRET_KEY=your-secret-key-here

# =============================================================================
# LangChain & AI Configuration
# =============================================================================
# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.1

# Alternative AI Providers (optional)
ANTHROPIC_API_KEY=your-anthropic-key-here
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# AWS Secrets Manager
AWS_SECRETS_MANAGER_REGION=us-east-1
AWS_SECRETS_MANAGER_SECRET_NAME=agent-etl-secrets

# =============================================================================
# Data Source Configurations
# =============================================================================
# S3 Data Source
S3_BUCKET=your-data-bucket
S3_PREFIX=data/
S3_REGION=us-east-1

# PostgreSQL Data Source
POSTGRES_SOURCE_HOST=localhost
POSTGRES_SOURCE_PORT=5432
POSTGRES_SOURCE_DB=source_data
POSTGRES_SOURCE_USER=readonly_user
POSTGRES_SOURCE_PASSWORD=readonly_password

# API Data Sources
API_BASE_URL=https://api.example.com
API_TOKEN=your-api-token
API_RATE_LIMIT=100

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Security
API_KEY=your-api-key-here
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Monitoring & Observability
# =============================================================================
# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/var/log/agent-etl/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Sentry Error Tracking (optional)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# =============================================================================
# Performance & Scaling
# =============================================================================
# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_MAX_MEMORY=2GB
WORKER_TIMEOUT=300

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# Development & Testing
# =============================================================================
# Test Database
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/test_agent_etl

# Mock Services
MOCK_AWS_SERVICES=false
MOCK_EXTERNAL_APIS=false

# Development Tools
HOT_RELOAD=true
AUTO_RELOAD_TEMPLATES=true

# =============================================================================
# Docker Compose Overrides
# =============================================================================
COMPOSE_PROJECT_NAME=agent-etl
POSTGRES_VERSION=15
REDIS_VERSION=7-alpine
AIRFLOW_VERSION=2.8.0

# =============================================================================
# CI/CD Configuration
# =============================================================================
# GitHub Actions
GITHUB_TOKEN=your-github-token
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Container Registry
CONTAINER_REGISTRY=ghcr.io
CONTAINER_IMAGE_NAME=agent-orchestrated-etl

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_VECTOR_SEARCH=false
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AUTO_SCALING=false
ENABLE_DISTRIBUTED_EXECUTION=false